<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_corner"
    android:elevation="4dp">

    <!-- Date / Time / Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/dateLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sample_date"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sample_time"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/statusLbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sample_status"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Service Label -->
    <TextView
        android:id="@+id/serviceNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_massage"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/bookedAtLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booked At: 21 May 2025, 15:00"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <!-- Staff Label -->
    <TextView
        android:id="@+id/staffNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_staff"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/rescheduleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reschedule"
            android:textColor="#3B84F1"
            android:backgroundTint="@color/white"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/cancel"
            android:textColor="#3B84F1"
            android:backgroundTint="@color/white"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/feedbackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/feedback"
            android:textColor="#3B84F1"
            android:backgroundTint="@color/white"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>
